# VPS Configuration Example
# Copy this file to .env and customize as needed

# User Configuration
NEW_USER="prod-dokploy"
DEFAULT_USER="ubuntu"

# SSH Configuration
SSH_PORT_MIN=50000
SSH_PORT_MAX=59999
# Or set a specific port:
# SSH_PORT=53387

# Fail2Ban Configuration
FAIL2BAN_BANTIME="1h"
FAIL2BAN_FINDTIME="10m"
FAIL2BAN_MAXRETRY=5

# Docker Configuration
DOCKER_LOG_MAX_SIZE="10m"
DOCKER_LOG_MAX_FILE="3"

# Logging
LOG_FILE="/var/log/vps_setup.log"

# Optional: Notification (future feature)
# NOTIFICATION_EMAIL=""
# SLACK_WEBHOOK=""
